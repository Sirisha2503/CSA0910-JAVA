public class EmployeeBonus {
    public static void main(String[] args) {
        double salary = 234567;
        char grade = 'A';  
        double bonus = 0;
        if (grade == 'A' || grade == 'a') {
            bonus = salary * 0.05;
        } else {
            bonus = salary * 0.10;
        }
        if (salary < 10000) {
            bonus += salary * 0.02;
        }
        System.out.printf("Bonus: $%.2f, Total Salary: $%.2f%n", bonus, salary + bonus);
    }
}
